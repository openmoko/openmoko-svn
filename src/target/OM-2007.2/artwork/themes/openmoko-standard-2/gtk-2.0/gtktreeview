   engine "pixmap" {
        image {
            function        = BOX
            state           = NORMAL
            file            = "treeview/header.png"
            border          = { 20, 20, 10, 10 }
            stretch         = TRUE
        }
    xthickness = 22
    ythickness = 10
    GtkButton::focus-line-width = 0
    fg[NORMAL] = "#ffffff"  
